<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev2.faceforapplication.fragments.IconFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:background="#55006600"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_contact_picture_180_holo_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00.00.00"
                    android:id="@+id/text_time_speek"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#610f88"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imBt_sreeker"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:background="#610f88"
                    android:layout_margin="1dp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imBt_voice"
                    android:layout_weight="1"
                    android:background="#610f88"
                    android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                    android:layout_margin="1dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
